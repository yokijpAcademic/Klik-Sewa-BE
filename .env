# MongoDB Atlas / Untuk sekarang pak dulu database local

# .env
# --- Database ---
MONGODB_URI=mongodb://localhost:27017/kliksewadb # Ganti jika pakai Atlas

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD= # Tambahkan jika Redis kamu memerlukan password

# --- Email (Brevo/Sendinblue) ---
BREVO_API_KEY=your_brevo_api_key_here
SENDER_EMAIL=no-reply@kliksawa.com
SENDER_NAME=Klik Sewa

# --- JWT ---
JWT_SECRET=your_super_secret_jwt_key_here # Gunakan string acak yang panjang dan kompleks
JWT_EXPIRATION_IN_MINUTES=10080 # 7 hari dalam menit

# --- Cloudinary (opsional untuk sekarang, tapi disiapkan dulu) ---
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=